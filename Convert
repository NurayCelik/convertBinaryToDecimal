#include <stdio.h>
#include <stdlib.h>
#include <math.h>
int convertBinaryToDecimal(int N);
int main(int argc, char const *argv[])
{
	int sayi;
	printf("Binary bir sayÄ± giriniz : ");
	scanf("%d",&sayi);
	printf("%d = %d \n", sayi,convertBinaryToDecimal(sayi));
	return 0;
}
int convertBinaryToDecimal(int N)
{
	int sonuc= 0;
	int i = 0;
	int islemSayisi;
	do
	{
		islemSayisi = N%10,
		N = N/10;
		sonuc +=islemSayisi*pow(2,i);
		i++;
	}
	while(N!=0);
	return sonuc;

}
